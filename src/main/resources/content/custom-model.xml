<model name="iparapheur:contentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

  <description>i-Parapheur internal custom models</description>
  <version>0.1</version>

  <imports>
    <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
    <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
  </imports>

  <namespaces>
    <namespace uri="http://libriciel.fr" prefix="iparapheur"/>
  </namespaces>

  <constraints>
    <constraint name="iparapheur:documentOrderConstraint" type="MINMAX">
      <parameter name='minValue'>
        <value>0</value>
      </parameter>
      <parameter name='maxValue'>
        <value>100</value>
      </parameter>
    </constraint>
  </constraints>

  <types>
    <type name="iparapheur:document">
      <title>i-Parapheur internal document model</title>
      <parent>cm:content</parent>
      <properties>
        <property name="iparapheur:isMainDocument">
          <title>Main document</title>
          <type>d:boolean</type>
        </property>
        <property name="iparapheur:documentOrder">
          <title>Document order</title>
          <type>d:int</type>
          <constraints>
            <constraint ref="iparapheur:documentOrderConstraint"/>
          </constraints>
        </property>
      </properties>
    </type>
  </types>

  <aspects>
  </aspects>

</model>